<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            tools:ignore="ExtraText">

            <ImageView
                android:id="@+id/book_cover_image"
                android:layout_width="150dp"
                android:layout_height="225dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/bookcv1"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"/>
              <!--  android:contentDescription="@string/book_cover_description"-->


            <TextView
                android:id="@+id/book_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:textStyle="bold"/>
              <!--  android:text="@string/book_title_placeholder" -->


            <TextView
                android:id="@+id/book_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp" />
              <!--  android:text="@string/book_author_placeholder"-->


            <TextView
                android:id="@+id/book_publication_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp" />
               <!-- android:text="@string/book_publication_date_placeholder" -->


            <TextView
                android:id="@+id/book_isbn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp" />
              <!--  android:text="@string/book_isbn_placeholder"-->


            <TextView
                android:id="@+id/book_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"  />
              <!--  android:text="@string/book_description_placeholder"-->


        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>