@model QuanLyThuVien.Models.CuonSach

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container" style="background-image: url('../../Images/background-form2.png');">
    <div class="inner">
        @using (Html.BeginForm("Edit", "CuonSaches", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()
            <h3>Cập nhập thông tin Cuốn Sách</h3>
            <div class="form-group">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.isbn)
                @Html.HiddenFor(model => model.ma_cuonsach)

            </div>
            <div class="form-wrapper">
                Tên cuốn sách:
                @Html.EditorFor(model => model.ten_cuonsach, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ten_cuonsach, "", new { @class = "text-danger" })
                @*<input type="text" class="form-control1">*@
            </div>
            <div class="form-wrapper">
                Tác giả:
                @Html.EditorFor(model => model.tacgia, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.tacgia, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <div class="form-wrapper">
                    Năm xuất bản:
                    @Html.EditorFor(model => model.namxuatban, new { htmlAttributes = new { @class = "form-control", type = "date" } })
                    @Html.ValidationMessageFor(model => model.namxuatban, "", new { @class = "text-danger" })
                </div>
                <div class="form-wrapper">
                    Nhà xuất bản:
                    @Html.EditorFor(model => model.nhaxuatban, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.nhaxuatban, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-wrapper">
                Thể loại:
                @Html.DropDownList("ma_loaisach", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ma_loaisach, "", new { @class = "text-danger" })
            </div>
            <div class="form-wrapper">
                Tình trạng:
                @Html.EditorFor(model => model.TinhTrang, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TinhTrang, "", new { @class = "text-danger" })
            </div>
            <div class="form-wrapper">
                Mô tả:
                @Html.EditorFor(model => model.Mota, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Mota, "", new { @class = "text-danger" })
            </div>
            <div class="form-wrapper">
                Hình ảnh:
                <div class="col-md-10">
                    CHỌN ẢNH MỚI
                    <input type="file" name="Hinhmota" style="paddingbottom: 20px;" />
                    <hr />
                    <img src="~/Images/@Model.Hinhmota" /> (Ảnh hiện tại)
                    @Html.ValidationMessageFor(model => model.Hinhmota, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input style="margin-left:-15px;background-color:Green" type="submit" value="Lưu" class=" button1" />
                </div>
            </div>
        }

        <div style="margin-left:45px;color:#ccc">
            <a href="~/CuonSaches/Index">Quay lại</a>
        </div>
    </div>

</div>

