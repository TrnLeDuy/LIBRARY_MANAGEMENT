@model QuanLyThuVien.Models.TaiKhoan

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/Content/bootstrap-chosen.css" rel="stylesheet" />



<div class="container" style="background-image: url('../../Images/library-background-form.jpg');">
    <div class="inner">

        @using (Html.BeginForm("Create", "TaiKhoans", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()
            <h3>Thêm tài khoản nhân viên</h3>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-wrapper">
                <div class="col-md-5">Nhân viên</div>
                <div class="col-md-10">
                    @Html.DropDownList("MaNV", null, htmlAttributes: new { @class = "form-control1", @id = "nvienDropdown", required = "required" })
                    @Html.ValidationMessageFor(model => model.MaNV, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-wrapper">
                <div class="col-md-5">Tài khoản</div>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control1", required = "required" } })
                    @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-wrapper">
                <div class="col-md-5">Mật khẩu</div>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control1", type = "password", required = "required" } })
                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-wrapper">
                <div class="col-md-5">Quyền</div>
                <div class="col-md-10">
                    @Html.DropDownListFor(model => model.LoaiTK, new List<SelectListItem>
                    {
                    new SelectListItem{Text="ADMIN", Value="AD"},
                    new SelectListItem{Text="Thủ thư", Value="TT"},
                    new SelectListItem{Text="Nhân viên Thư viện", Value="NV"}}, "Lựa chọn", new { @class = "form-control1", required = "required" })
                    @Html.ValidationMessageFor(model => model.LoaiTK, "", new { @class = "text-danger" })
                </div>
            </div>



            <input class="btn btn-success button1" type="submit" value="Xác nhận">
        }
        <div style="margin-left:238px;color:#ccc">
            @Html.ActionLink("Quay lại danh sách", "Index")
        </div>
    </div>

</div>


<script type="text/javascript">
    $(function () {
        $("#nvienDropdown").chosen();
    });
</script>

