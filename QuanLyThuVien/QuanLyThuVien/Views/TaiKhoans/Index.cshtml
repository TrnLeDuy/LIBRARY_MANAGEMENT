@model IEnumerable<QuanLyThuVien.Models.TaiKhoan>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>TÀI KHOẢN</h2>

<p>
    @Html.ActionLink("Tạo mới", "Create")
    @using (Html.BeginForm())
    {
    <p>
        Tìm tài khoản: @Html.TextBox("s") <input type="submit" value="Tìm kiếm" />
    </p>
    }
</p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Username)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Password)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LoaiTK)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NhanVien.Hoten)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Username)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Password)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LoaiTK)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NhanVien.Hoten)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.MaNV }) |
                    @Html.ActionLink("Details", "Details", new { id = item.MaNV }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.MaNV })
                </td>
            </tr>
        }

    </table>
