@model IEnumerable<QuanLyThuVien.Models.DauSach>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")

    @using (Html.BeginForm())
    {
<p>
    @Html.TextBox("s") <input type="submit" value="Tìm kiếm" />
</p>
    }
</p>
<table class="table">
    <tr>
        <th>
            Tên đầu sách
        </th>
        <th>
            Số lượng
        </th>
        <th>
            Trạng thái
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ten_dausach)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.soluong)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.trangthai)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.isbn }) |
                @Html.ActionLink("Details", "Details", new { id = item.isbn }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.isbn })
            </td>
        </tr>
    }

</table>
