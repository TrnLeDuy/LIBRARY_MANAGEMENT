@using QuanLyThuVien.Models;
@using PagedList.Mvc;
@model PagedList.PagedList<DauSach>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>QUẢN LÝ ĐẦU SÁCH</h2>

<p>
    @Html.ActionLink("Create New", "Create")

    @using (Html.BeginForm("Index", "DauSaches", FormMethod.Get))
    {
    <p>
        @Html.TextBox("s") <input type="submit" value="Tìm kiếm" />
    </p>
}
    </p>
    <table class="table">
        <tr>
            <th>
                Mã đầu sách
            </th>
            <th>
                Tên đầu sách
            </th>
            <th>
                Số lượng
            </th>
            <th>
                Trạng thái
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.isbn)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ten_dausach)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.soluong)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.trangthai)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.isbn }) |
                    @Html.ActionLink("Details", "Details", new { id = item.isbn }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.isbn })
                </td>
            </tr>
        }

    </table>

    <!-- Thêm mã phân trang -->
    <br />
    Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount
    <div class="MenuTrang">
        @Html.PagedListPager(Model, page => Url.Action("Index", new { page, currentFilter = ViewBag.CurrentFilter }))
    </div>
    <style>
        .MenuTrang li {
            display: inline;
        }
    </style>
    <!-- Kết thúc -->