@using QuanLyThuVien.Models;
@using PagedList.Mvc;
@model PagedList.PagedList<TheThuVien>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Thẻ thư viện </h2>

<style>

    .delete-button {
        background-color: red;
        color: white;
        padding: 10px 20px;
        border-radius: 5px;
        border: none;
        text-decoration: none;
    }

    .edit-button {
        background-color: green;
        color: white;
        padding: 10px 20px;
        border-radius: 5px;
        border: none;
        text-decoration: none;
    }
</style>

<div class="row mt-4">
    <div class="col-6">
        @if (Session["Role"] != null && (Session["Role"].ToString() == "AD" || Session["Role"].ToString() == "TT"))
        {
            @Html.ActionLink("Thêm thẻ thư viện ", "Create", null, new { @class = "btn btn-primary" })
        }
    </div>
    <div class="col-6">
        <form style="width: 100%; padding-left: 250px;" action="/TheThuViens/Index" method="get">
            <div class="form-group">
                <input class="form-control" id="search" type="text" name="s" placeholder="Tìm kiếm thẻ thư viện " value="" />
            </div>
        </form>
    </div>
    <table class="table">
        <tr>
            <th>
                Mã sinh viên
            </th>
            <th>
                Họ tên
            </th>
            <th>
                Ngày sinh
            </th>
            <th>
                Tình trạng thẻ
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <a style="text-decoration: none; color: black;" href="~/DauSaches/Details?id=@item.ma_sinhvien">
                        @Html.DisplayFor(modelItem => item.ma_sinhvien)
                    </a>
                <td>
                    <a style="text-decoration: none; color: black;" href="~/DauSaches/Details?id=@item.ma_sinhvien">
                        @Html.DisplayFor(modelItem => item.Hoten)
                    </a>

                </td>
                <td>
                    <a style="text-decoration: none; color: black;" href="~/DauSaches/Details?id=@item.ma_sinhvien">
                        @Html.DisplayFor(modelItem => item.NgaySinh)
                    </a>
                </td>
                <td>
                    <a style="text-decoration: none; color: black;" href="~/DauSaches/Details?id=@item.ma_sinhvien">
                        @Html.DisplayFor(modelItem => item.Tinhtrangthe)
                    </a>
                </td>
                @if (Session["Role"] != null && (Session["Role"].ToString() == "AD" || Session["Role"].ToString() == "TT"))
                {
                    <td>
                        <a class="edit-button fa fa-pencil" href="~/TheThuViens/Edit?id=@item.ma_sinhvien"></a>
                        <a class="delete-button fa fa-trash" href="~/TheThuViens/Delete?id=@item.ma_sinhvien"></a>
                    </td>
                }

            </tr>
        }
    </table>
</div>
<!-- Thêm mã phân trang -->
<br />
    Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount
    <div class="MenuTrang">
        @Html.PagedListPager(Model, page => Url.Action("Index", new { page, currentFilter = ViewBag.CurrentFilter }))
    </div>
    <style>
        .MenuTrang li {
            display: inline;
            background-color: lightblue;
            color: white;
            padding: 10px 20px;
            margin: 2px 5px;
            border-radius: 5px;
            border: none;
            text-decoration: none;
        }
    </style>
    <!-- Kết thúc -->
