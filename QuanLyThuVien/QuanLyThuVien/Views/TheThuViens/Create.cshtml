@model QuanLyThuVien.Models.TheThuVien

@{
    ViewBag.Title = "Tạo thẻ Thư viện";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container" style="background-image: url('../../Images/background-form4.png');">
    <div class="inner">
        @using (Html.BeginForm("Create", "TheThuViens", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()
            <h3>Thêm Thẻ thư viện </h3>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-wrapper">
                <div class="col-md-5">Mã Sinh Viên</div>
                <div class="col-md-10">
                    @Html.DropDownList("ma_sinhvien", null, htmlAttributes: new { @class = "form-control1" })

                    @*@Html.EditorFor(model => model.ma_sinhvien, new { htmlAttributes = new { @class = "form-control1" } })*@
                    @Html.ValidationMessageFor(model => model.ma_sinhvien, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-wrapper">
                @Html.LabelFor(model => model.Hoten, "Họ và tên Sinh viên", htmlAttributes: new { @class = "control-label col-md-5" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Hoten, new { htmlAttributes = new { @class = "form-control1" } })
                    @Html.ValidationMessageFor(model => model.Hoten, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-wrapper">
                @Html.LabelFor(model => model.NgaySinh,"Ngày sinh", htmlAttributes: new { @class = "control-label col-md-5" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.NgaySinh, new { htmlAttributes = new { @class = "form-control1", @type = "date" } })
                    @Html.ValidationMessageFor(model => model.NgaySinh, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-wrapper">
                @Html.LabelFor(model => model.Tinhtrangthe,"Tình trạng thẻ", htmlAttributes: new { @class = "control-label col-md-5" })
                <div class="col-md-10">
                    <select class="form-control1" name="Tinhtrangthe">
                        <option value="Y">Còn hiệu lực</option>
                        <option value="N">Hết hiệu lực</option>
                        <option value="L">Bị mất</option>
                    </select>
                    @*@Html.EditorFor(model => model.Tinhtrangthe, new { htmlAttributes = new { @class = "form-control1" } })*@
                    @Html.ValidationMessageFor(model => model.Tinhtrangthe, "", new { @class = "text-danger" })
                </div>
            </div>

            <input class="btn btn-success button1" type="submit" value="Xác nhận">

        }
        <div style="margin-left:265px;color:#ccc;font-size:130%">
            @Html.ActionLink("Quay lại", "Index")
        </div>
    </div>
</div>
    

   
    