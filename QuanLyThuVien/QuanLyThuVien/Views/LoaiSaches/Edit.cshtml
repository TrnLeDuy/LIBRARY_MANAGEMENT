@model QuanLyThuVien.Models.LoaiSach

@{
    ViewBag.Title = "Cập nhật Loại sách";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container" style="background-color: white">
    <div class="inner">
        @using (Html.BeginForm("Edit", "LoaiSaches", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(model => model.ma_loaisach)
            <h3>Cập nhập thông tin Thể loại sách</h3>
            <hr />
            <div class="form-group">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-wrapper">
                    Tên thể loại:
                    @Html.EditorFor(model => model.ten_loaisach, new { htmlAttributes = new { @class = "form-control1" } })
                    @Html.ValidationMessageFor(model => model.ten_loaisach, "", new { @class = "text-danger" })
                    @*<input type="text" class="form-control1">*@
                </div>

                <div class="form-wrapper">
                    Mã thể loại:
                    @Html.EditorFor(model => model.ma_loaisach, new { htmlAttributes = new { @class = "form-control1", @readonly = "readonly" } })
                    @Html.ValidationMessageFor(model => model.ten_loaisach, "", new { @class = "text-danger" })
                    @*<input type="text" class="form-control1">*@
                </div>


            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input style="margin-left:-15px;background-color:Green" type="submit" value="Lưu" class=" button1" />
                </div>
            </div>
        }

        <div style="margin-left:45px;color:#ccc">
            <a href="~/LoaiSaches/Index">Quay lại</a>
        </div>
    </div>

</div>