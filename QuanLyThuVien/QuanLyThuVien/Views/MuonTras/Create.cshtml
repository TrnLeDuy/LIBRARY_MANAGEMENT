@model QuanLyThuVien.Models.MuonTra

@{
    ViewBag.Title = "Tạo Phiếu Mượn";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/Content/bootstrap-chosen.css" rel="stylesheet" />

<div class="container" style="background-image: url('../../Images/background-form4.png');">
    <div class="inner">
        @using (Html.BeginForm("Create", "MuonTras", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()
            <h3>Thêm phiếu mượn trả </h3>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-wrapper">
                @Html.LabelFor(model => model.ma_sinhvien, "Mã sinh viên", htmlAttributes: new { @class = "control-label col-md-5" })
                <div class="col-md-10">
                    @Html.DropDownList("ma_sinhvien", null, htmlAttributes: new { @class = "form-control1", @id = "svienDropdown", required = "required" })
                    @Html.ValidationMessageFor(model => model.ma_sinhvien, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-wrapper">
                <div class="col-md-5">Nhân viên</div>
                <div class="col-md-10">
                        @Html.DropDownList("MaNV", null, htmlAttributes: new { @class = "form-control1", @id = "nvienDropdown", required = "required" })
                        @Html.ValidationMessageFor(model => model.MaNV, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-wrapper">
                @Html.LabelFor(model => model.ngayGio_muon, "Ngày giờ mượn", htmlAttributes: new { @class = "control-label col-md-5" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.ngayGio_muon, new { htmlAttributes = new { @class = "form-control1", type = "date" } })
                    @Html.ValidationMessageFor(model => model.ngayGio_muon, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-wrapper">
                @Html.LabelFor(model => model.ngay_hethan, "Ngày giờ trả", htmlAttributes: new { @class = "control-label col-md-5" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.ngay_hethan, new { htmlAttributes = new { @class = "form-control1", type = "date" } })
                    @Html.ValidationMessageFor(model => model.ngay_hethan, "", new { @class = "text-danger" })
                </div>
            </div>

            <input class="btn btn-success button1" type="submit" value="Xác nhận">

        }
        <div style="margin-left:265px;color:#ccc;font-size:130%">
            @Html.ActionLink("Quay lại", "Index")
        </div>
    </div>


<script type="text/javascript">
    $(function () {
        $("#svienDropdown").chosen();
        $("#nvienDropdown").chosen();
    });
</script>