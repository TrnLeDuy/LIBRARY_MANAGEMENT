@{
    Layout = null;
}

<html>
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dangnhap</title>

    <!--Bootstrap/CSS-->
    <link href="~/Content/LogIn.css" rel="stylesheet" />
    <link href="~/Content/general.css" rel="stylesheet" />
</head>
<body>
    @using (Html.BeginForm("Dangnhap", "Home"))
    {
        if (!string.IsNullOrEmpty(ViewBag.ThongBao))
        {
            <div id="message-box">
                <h3 class="warningMessage" style="text-align:center">@ViewBag.ThongBao</h3>
                <form method="post" action="~/Views/Home/Dangnhap.cshtml">
                    <input type="submit" name="closeMessage" value="ĐÓNG" />
                </form>
            </div>
        }
    }
    <div class="form">
        <div class="layout">
            <div class="img">
                <img src="~/Images/background.png" alt="background" />
            </div>
            <div class="text">
                <div>
                    @using (Html.BeginForm("Dangnhap", "Home"))
                    {
                        <h2 class="login-title" style="text-align:center; margin-top: 30px; margin-bottom:30px">ĐĂNG NHẬP</h2>
                        <div class="form-group" style="text-align: left;">
                            <label for="login">Mã sinh viên: </label>
                            @Html.TextBox("ma_sinhvien", null, new { @class = "form-control", @id = "login", required = "required" })
                        </div>


                        <button style="margin-top:60px;" type="submit" class="btn sub-btn btn-primary">ĐĂNG NHẬP</button>
                        <a style="margin-top:30px;" class="btn sub-btn btn-primary" href="~/Home/Index">TRỞ VỀ</a>
                    }
                </div>
            </div>
        </div>
    </div>
</body>
</html>


