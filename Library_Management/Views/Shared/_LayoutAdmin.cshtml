<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewBag.Title</title>

    <!--Boostrap/CSS-->
    <link href="~/Content/admini_general.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">


</head>
<body>
    <style>
        :root {
            --library-primary-one-color: #00ADB5;
            --library-primary-font-color: #222831;
            --library-second-third-color: #393E46;
            --library-second-four-color: #EEEEEE;
        }
    </style>

    <div id="app">
        <div class="layout">
            <div class="nav-layout">
                <aside class="menu-sidepanel">
                    <nav class="navbar-nav" role="navigation" aria-label="Sidepanel">
                        <div class="menu-sidepanel-header">
                            <a class="menu-brand" href="#">
                                <div id="logo" style="display: none">
                                    <img alt="brand banner" src="~/Images/orange.png" />
                                </div>
                                <div class="" id="banner">
                                    <img alt="brand banner" src="~/Images/orangehrm-logo.png" />
                                </div>
                            </a> 
                            <i class="menu-icon bi-x menu-sidepanel-header-close"></i>
                        </div>
                    </nav>
                </aside>
            </div>
        </div>
    </div> 

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>
    
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
