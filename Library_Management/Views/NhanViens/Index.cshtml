@model IEnumerable<Library_Management.Models.NhanVien>
@{
    ViewBag.Title = "Danh sách Nhân viên";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<!--Boostrap/CSS-->
<style>
    body {
        overflow-x: hidden;
        font-size: larger
    }

    table {
        border-collapse: collapse;
        border-radius: 50px;
    }

    table, th, td {
        border: 1px solid black;
    }

    th, td {
        padding: 8px;
    }

    .detail-button {
        background-color: lightblue;
        color: white;
        padding: 10px 20px;
        border-radius: 5px;
        border: none;
        text-decoration: none;
    }

    .delete-button {
        background-color: red;
        color: white;
        padding: 10px 20px;
        border-radius: 5px;
        border: none;
        text-decoration: none;
    }

    .edit-button {
        background-color: green;
        color: white;
        padding: 10px 20px;
        border-radius: 5px;
        border: none;
        text-decoration: none;
    }
</style>
<body>
    <p>
        @Html.ActionLink("Thêm mới", "Create")
        @Html.ActionLink("Danh sách Tài khoản", "Index", "TaiKhoans")
    </p>
    <table class="table">
        <tr>
            <th>
                Mã nhân viên
            </th>
            <th>
                Họ tên
            </th>
            <th>
                Địa chỉ Email
            </th>
            <th>
                Số điện thoại
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.MaNV)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Hoten)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SDT)
                </td>
                <td>
                    <button class="edit-button">
                        @Html.ActionLink("Edit", "Edit", new { id = item.MaNV }) 
                    </button>
                    <button class="detail-button">
                        @Html.ActionLink("Details", "Details", new { id = item.MaNV }) 
                    </button>
                    <button class="delete-button">
                        @Html.ActionLink("Delete", "Delete", new { id = item.MaNV })
                    </button>
                </td>
            </tr>
        }

    </table>
</body>
