@using Library_Management.Models;
@using PagedList.Mvc;
@model PagedList.PagedList<TuaSach>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}



<h2>QUẢN LÝ TỰA SÁCH</h2>

<p>
    @Html.ActionLink("THÊM MỚI", "Create", null, new { @class = "btn btn-success" })
</p>
<table class="table">
    <tr>
        <th>
            Mã tựa sách
        </th>
        <th>
            Loại sách
        </th>
        <th>
            Tựa sách
        </th>
        <th>
            Tác giả
        </th>
        <th>
            Tóm tắt
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ma_tuasach)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LoaiSach.ten_loaisach)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TuaSach1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.tacgia)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.tomtat)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ma_tuasach }, new { @class = "btn btn-success"}) |
                @Html.ActionLink("Details", "Details", new { id = item.ma_tuasach } , new { @class = "btn btn-primary" }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.ma_tuasach }, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }

</table>



<!-- Thêm mã phân trang -->
<br />
<p style="text-align:center;">
    Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount
</p>
<div class="MenuTrang">
    @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
</div>
<style>
    .MenuTrang li {
        display: inline;
    }

    .MenuTrang {
        margin-left: auto;
        margin-right: auto;
        width: auto;
        align-content: center;
        text-align: center;
        justify-content: center;
    }

    td, th {
        text-align: center;
    }
</style>
