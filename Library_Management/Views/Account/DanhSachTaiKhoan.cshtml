@model IEnumerable<Library_Management.Models.TaiKhoan>

@{
    ViewBag.Title = "Danh Sách Tài Khoản";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<!--Boostrap/CSS-->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">

<p>
    @Html.ActionLink("Thêm mới", "Create")
    @Html.ActionLink("Danh sách Nhân Viên", "DanhSachNhanVien")
</p>
<table class="table">
    <tr>
        <th>
            Tài Khoản
        </th>
        <th>
            Vai trò
        </th>
        <th>
            Họ và tên
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Username)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LoaiTK)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NhanVien.Hoten)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.MaNV }) |
                @Html.ActionLink("Details", "DanhSachNhanVien", new { id = item.MaNV }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.MaNV })
            </td>
        </tr>
    }

</table>
